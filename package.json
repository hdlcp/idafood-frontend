{
  "name": "idafood",
  "version": "1.0.0",
  "description": "IdaFood",
  "main": "src/js/app.js",
  "scripts": {
    "start": "node local-server.js",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./public/css/output.css",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./public/css/output.css --watch",
