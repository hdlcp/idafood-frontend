<!-- Menu latéral -->
<div id="side-menu"
class="fixed top-0 left-0 h-full w-64 bg-black text-white transform -translate-x-full transition-transform duration-300 z-50">
<div class="flex flex-col items-center pt-8">
 <img src="/images/logoIda.png" alt="Logo" class="w-35 mb-6" />
 
 <div class="mt-8 flex flex-col items-center">
    <% if (utilisateur.role === 'serveur') { %>
   <button onclick="window.location.href='/commandes_attente'" class="bg-green-600 w-48 text-white font-semibold py-2 my-2 rounded-full">Servir une commande</button>
   <button onclick="window.location.href='/nouvelle_commande'" class="bg-blue-800 w-48 text-white font-semibold py-2 my-2 rounded-full">Nouvelle commande</button>

   <% } else if (utilisateur.role === 'caissiere') { %>
    <button onclick="window.location.href='/finaliser_commande'" class="bg-green-600 w-48 text-white font-semibold py-2 my-2 rounded-full">Finaliser une commande</button>
    <button onclick="window.location.href='/ajout_depense'" class="bg-blue-800 w-48 text-white font-semibold py-2 my-2 rounded-full">Ajouter une dépense</button>
    <button onclick="window.location.href='/point_journee'" class="bg-red-800 w-48 text-white font-semibold py-2 my-2 rounded-full">Point de la journée</button>

    <% } else if (utilisateur.role === 'boss') { %>
    <button onclick="window.location.href='/employes'" class="bg-green-600 w-48 text-white font-semibold py-2 my-2 rounded-full">Employés</button>
    <button onclick="window.location.href='/point_de_journee'" class="bg-blue-800 w-48 text-white font-semibold py-2 my-2 rounded-full">Points de la journée</button>
    <button onclick="window.location.href='/point_general'" class="bg-red-800 w-48 text-white font-semibold py-2 my-2 rounded-full">Points Générale</button>
    <% } %>
  <!-- Bouton déconnexion (toujours là) -->
   <button onclick="window.location.href='/login'" class="bg-ida-gold w-48 text-white font-semibold py-2 my-2 rounded-full">Déconnexion</button>
 </div>
</div>
<!-- Bouton de fermeture -->
<div class="absolute bottom-6 left-1/2 transform -translate-x-1/2">
<button id="menu-close" class="bg-ida-gold w-10 h-10 rounded-full flex items-center justify-center text-black">
 <i class="fas fa-times text-xl"></i>
</button>
</div>
</div>

<!-- Script ouverture/fermeture menu -->
<script>
const menu = document.getElementById("side-menu");
const toggleBtn = document.getElementById("menu-toggle");
const closeBtn = document.getElementById("menu-close");

toggleBtn.addEventListener("click", () => {
menu.classList.remove("-translate-x-full");
});

closeBtn.addEventListener("click", () => {
menu.classList.add("-translate-x-full");
});
</script>